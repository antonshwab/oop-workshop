{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "lib": ["es2017"],
    "types": ["reflect-metadata"],
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots" : [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
